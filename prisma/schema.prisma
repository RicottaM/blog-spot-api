generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int    @id @default(autoincrement())
  login        String @unique
  email        String @unique
  passwordHash String

  posts    Post[]
  likes    PostLike[]
  comments PostComment[]
}

model Post {
  id       Int    @id @default(autoincrement())
  authorId Int
  text     String

  author   User          @relation(fields: [authorId], references: [id])
  likes    PostLike[]
  comments PostComment[]
  images   PostImage[]
}

model PostComment {
  id       Int    @id @default(autoincrement())
  authorId Int
  postId   Int
  text     String

  author User @relation(fields: [authorId], references: [id])
  post   Post @relation(fields: [postId], references: [id])
}

model PostLike {
  id       Int @id @default(autoincrement())
  authorId Int
  postId   Int

  author User @relation(fields: [authorId], references: [id])
  post   Post @relation(fields: [postId], references: [id])

  @@unique([authorId, postId])
}

model PostImage {
  id     Int    @id @default(autoincrement())
  postId Int
  url    String
  alt    String

  post Post @relation(fields: [postId], references: [id])
}
